{
	"compilerOptions": {
		"target": "es6",
		"allowJs": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "nodenext",
		"moduleResolution": "node",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["**/*.ts", "**/*.tsx", "src/**/*"],
	"exclude": ["node_modules"]
}
