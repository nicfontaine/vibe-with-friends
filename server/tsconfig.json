{
	"compilerOptions": {
		"target": "es6",
		"allowJs": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
